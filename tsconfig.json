{
  "compilerOptions": {
    "noImplicitAny": true,
    "module": "es2015",
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "inlineSourceMap": true,
    "inlineSources": true,
    "declaration": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules"
    ],
    "types": [
      "jasmine",
      "node"
    ],
    "lib": ["es6", "es2015", "dom"]
  },
  "files": [
    "localize-router.ts",
    "./src/localize-router.pipe.ts",
    "./src/localize-router.service.ts",
    "./src/localize-router.module.ts",
    "tests/localize-router.service.spec.ts",
    "tests/localize-router.pipe.spec.ts"
  ],
  "exclude": [
    "node_modules",
    "bundles"
  ],
  "angularCompilerOptions": {
    "strictMetadataEmit": true,
    "skipTemplateCodegen": true
  }
}
